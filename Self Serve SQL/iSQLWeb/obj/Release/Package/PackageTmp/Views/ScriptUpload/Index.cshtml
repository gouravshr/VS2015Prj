
@model iSql.Commons.Models.Ticket

@{
    ViewBag.Title = "Upload SQL Scripts and Rollback Scripts!";
    //ViewBag.Message = null; 
}

    
    <form id="upload" action="@Url.Action("Index")" method="post" enctype="multipart/form-data" >
        @if ( ViewBag.Message != null ) { <p>@ViewBag.Message</p> } 
        @Html.ValidationSummary(true)
        <div>
            @Html.LabelFor(model => model.ProjectId, "Project")
            @Html.DropDownList("ProjectId", String.Empty)
            @Html.ValidationMessageFor(model => model.ProjectId)
        </div>

        <div>
            @Html.LabelFor(model => model.Description)
            @Html.TextAreaFor(model => model.Description )
            @Html.ValidationMessageFor(model => model.Description)
        </div>


        <label>Target Script:</label> <input type="file" name="targetScript" class="file" /> <br /> 
        <label>Rollback Script:</label> <input type="file" name="rollbackScript"  class="file"   /><br />
        <input type="submit" name="submit" class="submit" value="Upload"  />
    </form>
  

@section js { 
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}