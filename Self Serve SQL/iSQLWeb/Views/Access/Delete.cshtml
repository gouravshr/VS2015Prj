@model iSql.Commons.Models.Access

@{
    ViewBag.Title = "Delete";
    // different user mode  
    var backUrl = Url.Action("Index");

    if (Model.UserId != null) 
    {
        backUrl = Url.Action("User", new { id = Model.UserId }) + @"/";
    }
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Access</legend>

    <div class="display-label">Role</div>
    <div class="display-field">
        
        @Html.DisplayFor(model => model.Role)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <br /> <hr />
    <p><input type="submit" value="Delete"  class="submit" /> <a href="@backUrl" class="link" } >Back to list</a></p>
}
