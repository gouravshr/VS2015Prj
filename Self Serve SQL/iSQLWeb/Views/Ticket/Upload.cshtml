
@model iSql.Commons.Models.Ticket

@{
    ViewBag.Title = "Upload SQL Scripts and Rollback Scripts!";
    
    Html.EnableClientValidation();    
    Html.EnableUnobtrusiveJavaScript();
}

    <form id="upload" action="@Url.Action("Upload")" method="post" enctype="multipart/form-data" class="f" >
        @if ( ViewBag.Message != null ) { <p>@ViewBag.Message</p> } 
        @Html.ValidationSummary(true)
        <div>
            @Html.LabelFor(model => model.ProjectId, "Project")
            @Html.DropDownList("ProjectId", String.Empty)
            @Html.ValidationMessageFor(model => model.ProjectId)
        </div>

        @*
         NOTE: ITG no longer needed as of R1.3    
        <div>
            @Html.LabelFor( model => model.ItgNumber, "ITG Number" ) 
            @Html.TextBoxFor( model => model.ItgNumber ) 
            @Html.ValidationMessageFor(model => model.ItgNumber)
        </div>
        *@

        <div>
            @Html.LabelFor(model => model.Description)
            @Html.TextAreaFor(model => model.Description )
            @Html.ValidationMessageFor(model => model.Description)
        </div>
       

        <hr />
        <label>Target Script:</label> <input type="file" name="targetScript" class="file" size="60" /> <br /> 
        <label>Rollback Script:</label> <input type="file" name="rollbackScript" class="file" size="60"  />  <br />
            @* Html.ValidationMessageFor(model => model) *@
        <hr />
        <input type="submit" name="submit" class="submit btn_ok" value="Upload"  />
    </form>
  
@section js { 
  <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}